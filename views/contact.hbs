<html>

<head>
    <title>Chapter 2 - Task Day 6 - Contact</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.0/css/all.min.css" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <link rel="stylesheet" href="../public/assets/css/style.css" />
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="../public/assets/img/logo.png" alt="logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    {{#if isLogin}}
                    <li class="nav-item">
                        <a class="nav-link " href="/add-project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <a class="btn btn-dark text-white" href="/contact">My Contact</a>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->
    <!-- Form Contact-->

    <!-- Form Add-Project -->
    <form>
        <div class="container-fluid d-flex align-items-center justify-content-center text-black">
            <div class="container-form">
                <h2 class="text-center mt-4 ">GET IN TOUCH</h2>
                <div class="mb-3">
                    <label for="input-name" class="form-label">Name</label>
                    <input type="text" class="form-control shadow-sm bg-body rounded " id="input-name" name="inputName">
                </div>
                <div class="mb-3">
                    <label for="input-email" class="form-label">Email</label>
                    <input type="email" class="form-control shadow-sm bg-body rounded " id="input-email" name="inputEmail">
                </div>
                <div class="mb-3">
                    <label for="input-phone" class="form-label">Phone Number</label>
                    <input type="number" class="form-control shadow-sm bg-body rounded " id="input-phone" name="inputPhone">
                </div>
                <div class="mb-3">
                    <label for="input-subject" class="form-label">Subject</label>
                    <select class="form-select" aria-label="Default select example" id="input-subject" name="inputSubject">
                        <option selected>Select</option>
                        <option value="Let's Talk">Let's Talk</option>
                        <option value="Let's Collaborate">Let's Collaborate</option>
                        <option value="Let's Hire">Let's Hire</option>
                    </select>
                </div>

                <div class="mb-3">
                    <label for="input-description" class="form-label">Description</label>
                    <textarea class="form-control shadow-sm bg-body rounded" id="input-description" rows="4" name="inputDescription"></textarea>

                    <div class="d-grid d-md-flex justify-content-md-end mt-3">
                        <button class="btn btn-dark text-white px-4 py-1 fw-bold" onclick="submitData()" type="button" >Submit</button>
                    </div>
                </div>
            </div>
    </form>
    <!-- End Form-Project -->

    <!-- Script-Javacript -->
    <script src="../public/assets/js/formContact.js"></script>
    
    <!-- Bootstrap -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- End Script-Javascript -->
</body>

</html>