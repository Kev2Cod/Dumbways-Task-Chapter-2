    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.1.1/css/all.min.css"
        integrity="sha512-KfkfwYDsLkIlwQp6LFnl8zNdLGxu9YAA1QvwINks4PhcElQSvqcyVLLD9aMhXd13uQjoXtEKNosOWaZqXgel0g==" crossorigin="anonymous"
        referrerpolicy="no-referrer" />
    <link rel="stylesheet" href="../public/assets/css/style.css">
    <!-- End Style -->

</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="../public/assets/img/logo.png" alt="logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/add-project">Add Project</a>
                    </li>
                </ul>
                <a class="btn btn-dark text-white" href="/contact">My Contact</a>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    {{!-- Add Form Project --}}
    <form action="/update-project/{{project.id}}" method="POST">
        <div class="container-fluid d-flex align-items-center justify-content-center text-black">
            <div class="container-form">
                <h2 class="text-center my-5">EDIT MY PROJECT</h2>
                <div class="mb-3">
                    <label for="input-project" class="form-label">Project Name</label>
                    <input type="text" class="form-control shadow-sm bg-body rounded " id="input-project" value="{{project.projectName}}"name="projectName"required>
                </div>
                <!-- Date Duration -->
                <div class="mb-3 row">
                    <div class="col">
                        <label for="input-startDate" class="form-label">Start Date</label>
                        <input type="date" class="form-control shadow-sm bg-body rounded " id="input-startDate" value="{{project.startDate}}" name="starDate" required>
                    </div>
                    <div class="col">
                        <label for="input-endDate" class="form-label">End Date</label>
                        <input type="date" class="form-control shadow-sm bg-body rounded " id="input-endDate" value="{{project.endDate}}" name="endDate" required>
                    </div>
                </div>
                <!-- End Date-Duration -->

                <div class="mb-3">
                    <label for="input-description" class="form-label">Description</label>
                    <textarea class="form-control shadow-sm bg-body rounded" id="input-description" name="description"
                        rows="4">{{project.description}}</textarea>
                </div>

                <!-- Technologies -->
                <div class="d-flex mb-3">
                    <!-- Techno-left -->
                    <div class="techno-form-right me-5">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="nodeJs" value="true" name="nodeJs" {{#if project.nodeJs}} checked {{/if}}>
                            <label class="form-check-label" for="flexCheckDefault">
                                Node Js
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="reactJs" value="true" name="reactJs" {{#if project.reactJs}} checked {{/if}}>
                            <label class="form-check-label" for="flexCheckDefault">
                                React Js
                            </label>
                        </div>
                    </div>
                    <!-- End Techno-right -->
                    <!-- Techno-left -->
                    <div class="techno-form-left">
                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="laravel" value="true" name="laravel" {{#if project.laravel}} checked {{/if}}>

                            <label class="form-check-label" for="flexCheckDefault">
                                Laravel
                            </label>
                        </div>

                        <div class="form-check">
                            <input class="form-check-input" type="checkbox" id="ember" value="true" name="ember" {{#if project.ember}} checked {{/if}}>
                            <label class="form-check-label" for="flexCheckDefault">
                                Ember
                            </label>
                        </div>
                    </div>
                    <!-- Techno-left -->
                </div>
                <!-- End Technologies -->

                <!-- Input Image -->
                <div class="mb-3">
                    <label for="formFile" class="form-label">Upload Image</label>
                    <input class="form-control shadow-sm bg-body rounded" type="file" id="input-image" value="{{project.image}}" name="image">
                </div>
                <!-- Input Image -->

                <!-- Button  -->
                <div class="d-grid d-md-flex justify-content-md-end mb-3">
                    <button class="btn btn-dark text-white px-4 py-1 fw-bold">Submit</button>
                </div>
                <!-- End Button  -->
            </div>
        </div>
    </form>
    <!-- End Form-Project -->


    <!--Script Javascript -->
    <script src="public/assets/js/formAddProjects.js"></script>
    <!-- End Script Javascript -->


</body>

</html>