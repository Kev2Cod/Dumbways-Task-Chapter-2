        referrerpolicy="no-referrer" />

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="../public/assets/img/logo.png" alt="logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link active fw-bold " aria-current="page" href="/">Home</a>
                    </li>
                    {{#if login}}
                    <li class="nav-item">
                        <a class="nav-link" href="/add-project">Add Project</a>
                    </li>
                    {{/if}}
                </ul>
                <a class="btn btn-dark text-white" href="/contact">My Contact</a>
            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    <!-- Container Card Detail -->

    <div class="container-card d-flex justify-content-center align-items-center ">
        <div class="card shadow-lg p-3 bg-light" style="min-width: 800px; max-width:900px ;">
            <div class="row g-0 p-3 ">
                <div class="col-8 pe-3">
                    <div class="card-body">
                        <h3 class="card-title">Hi Welcome to My Hut!</h3>
                        <p class="card-text">Lorem ipsum dolor sit amet consectetur adipisicing elit. Assumenda maxime non, recusandae reprehenderit
                            consequatur quos eius atque exercitationem! Ab, cupiditate. Ab, veniam exercitationem. At eius magnam, quas illum officiis
                            inventore. Lorem ipsum dolor sit amet consectetur adipisicing elit. Dicta, eligendi aut quibusdam non sit vel sed officia
                            laborum provident praesentium nulla harum ipsam veniam nemo delectus aliquid eum error commodi!</p>

                        <!-- Button & Link CV -->
                        <div class="mb-4">
                            <a type="button" class="btn btn-dark px-4 py-1 me-3 text-white" href="/contact">Contact</a>
                            <a href="#" class="text-">download CV <i class="fa-solid fa-download"></i></a>
                        </div>
                        <!-- End Button & Link CV -->

                        <!-- Icon Group -->
                        <div class="icon-group">
                            <a href="#"><i class="fa-brands fa-linkedin"></i></a>
                            <a href="#"><i class="fa-brands fa-instagram-square"></i></a>
                            <a href="#"><i class="fa-brands fa-facebook"></i></a>
                            <a href="#"><i class="fa-brands fa-twitter-square"></i></a>
                        </div>

                    </div>
                </div>
                <!-- Card Name-->
                <div class="col-4">
                    <div class="card" style="width: 250px;">
                        <img src="../public/assets/img/profile-1.jpeg" class="card-img-top" alt="...">
                        <div class="card-body text-center">
                            <h3>Kevin Williams Permana</h3>
                            <p class="card-text text-center">Fullstack Developer</p>
                        </div>
                    </div>
                </div>
                <!-- End Card Name -->
            </div>
        </div>
    </div>
    <!-- End Container Card Name -->


    <!-- Container MyProject -->
    <div class="container-fluit bg-light">
        <div class="container">
            <h2 class="text-center text-uppercase my-5 py-5">My Project</h2>
            <div class="row row-cols-1 row-cols-md-3 g-4" id="project-card">
                <!-- Card-project-->
                {{#each projects}}
                <div class="col mb-5">
                    <div class="card h-100">
                        <img src="../public/assets/img/astronot.jpg" class="card-img-top" alt="Image Project">
                        <div class="card-body p-4 ">
                            <a href="/detail-project/{{@index}}">
                                <h5 class="card-title">{{this.projectName}}</h5>
                            </a>
                            <p class="fw-light">Durasi : {{this.duration}}</p>
                            <p class="card-text">{{this.description}}</p>
                            <!-- List-Icon -->

                            <div class="icon-checkbox mb-3">
                                {{#if nodeJs}}
                                <i class="fa-brands fa-node me-2"></i>
                                {{/if}}
                                
                                {{#if reactJs}}
                                <i class="fa-brands fa-react me-2"></i>
                                {{/if}}

                                {{#if nextJs}}
                                <i class="fa-brands fa-battle-net me-2"></i>
                                {{/if}}

                                {{#if typescript}}
                                <i class="fa-solid fa-scroll me-2"></i>
                                {{/if}}
                            </div>
                            <!-- End List-Icon -->

                            <!-- Button Card -->
                            {{#if isLogin}}
                            <div class="row d-flex justify-content-around">
                                <a href="/edit-project/{{@index}}" class="btn btn-dark text-white col-5 px-1">edit</a>
                                <a href="/delete-project/{{@index}}" class="btn btn-dark text-white col-5 px-1">delete</a>
                            </div>
                            {{/if}}
                            <!-- End Button Card -->
                        </div>
                    </div>
                </div>
                {{/each}}
                <!-- End Card -->

            </div>
        </div>
        <!-- End Card-List-->
    </div>



