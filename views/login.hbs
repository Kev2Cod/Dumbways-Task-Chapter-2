    <!-- End Style -->
</head>

<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-md navbar-light bg-light">
        <div class="container">
            <a class="navbar-brand" href="#"><img src="../public/assets/img/logo.png" alt="logo"></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent"
                aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarSupportedContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" aria-current="page" href="/">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link " href="/add-project">Add Project</a>
                    </li>
                </ul>
                <form class="d-flex">
                    <a class="nav-link" href="/register">Register</a>
                    <a class="nav-link active fw-bold" href="/login">Login</a>
                    <a class="btn btn-dark text-white ms-4" href="/contact">My Contact</a>
                </form>

            </div>
        </div>
    </nav>
    <!-- End Navbar -->

    <!-- Form Add-Project -->
    <form action="/login" method="POST">
        <div class="container-fluid d-flex align-items-center justify-content-center text-black">
            <div class="container-form">
                <h2 class="text-center my-5 ">LOGIN TO YOUR ACCOUNT</h2>

                {{!-- Jika Email Belum Terdaftar --}}
                {{#if messages.danger}}
                <div class="alert alert-danger" role="alert">
                    {{messages.danger}}
                </div>
                {{/if }}
                {{!-- Jika Password Salah --}}
                {{#if messages.warning}}
                <div class="alert alert-warning" role="alert">
                    {{messages.warning}}
                </div>
                {{/if }}
                {{!-- Berhasil Login --}}
                {{#if messages.success}}
                <div class="alert alert-success" role="alert">
                    {{messages.success}}
                </div>
                {{/if}}

                <div class="mb-3">
                    <label for="input-email" class="form-label">Email</label>
                    <input type="email" class="form-control shadow-sm bg-body rounded " id="input-email" name="inputEmail" required>
                </div>
                <div class="mb-3">
                    <label for="input-password" class="form-label">Password</label>
                    <input type="password" class="form-control shadow-sm bg-body rounded " id="input-password" name="inputPassword" required>
                </div>
                <!-- Button  -->
                <div class="d-grid d-md-flex justify-content-md-end mt-4">
                    <button class="btn btn-dark text-white px-4 py-1 fw-bold">Submit</button>
                </div>
                <!-- End Button  -->
            </div>
        </div>
    </form>
    <!-- End Form-Project -->

    <!-- Javascript -->
    <!-- Bootstrap-->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
    <!-- End Javascript -->
</body >

